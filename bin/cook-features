#!/bin/bash

print_features()
{
	CWD=`pwd`
	cd $COOK_PROJECT
	FEATURES=`find _feature/ -type d | sort | cut -f 2- -d/`
	for FEATURE in $FEATURES; do
		if [ -f _feature/$FEATURE/_feature.mk ]; then
			if [ -f _feature/$FEATURE/main.c -o -f _feature/$FEATURE/main.cpp ]; then
				echo $FEATURE
			fi
		fi
	done
	cd $CWD
}

print_features

exit 0
